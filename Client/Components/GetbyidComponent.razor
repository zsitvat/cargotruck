                                {
                                    @(CurrencyExchange.GetCurrency(idDataExpense?.Driver_spending, CurrencyExchange.currency)!.Value.ToString("0.##") + " " + CurrencyExchange.currency)
                                }
                                else if (idDataExpense?.Driver_spending != 0)
                                {
                                    @(idDataExpense?.Driver_spending + " HUF")
