                                {
                                    @(CurrencyExchange.GetCurrency(idDataExpense?.Driver_salary, CurrencyExchange.currency)!.Value.ToString("0.##") + " " + CurrencyExchange.currency)
                                }
                                else if (idDataExpense?.Driver_salary != 0)
                                {
                                    @(idDataExpense?.Driver_salary + " HUF")
                                }

                            }
                            else
                            {
                                @("-")
                            }
                        </p>
                        <p>
                            @if (idDataExpense?.Repair_cost != null)
                            {
                                @if (CurrencyExchange.currency != "HUF" && CurrencyExchange.Rates != null)
                                {
                                    @(CurrencyExchange.GetCurrency(idDataExpense?.Repair_cost, CurrencyExchange.currency)!.Value.ToString("0.##") + " " + CurrencyExchange.currency)
                                }
