@page "/Expenses/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" expenses="@expense" OnValidSubmit="@CreateExpense" TitleText="Create_expense" checkValidSubmit="@CheckValidSubmit" />

@code {
    ExpensesDto expense = new ExpensesDto();
    bool isValidSubmit = true;

    async Task CreateExpense()
    {
        if (isValidSubmit)
        {
            await http.PostAsJsonAsync("api/expenses/post", expense);
            uriHelper.NavigateTo("/Expenses");
        }
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Expenses/create");
        base.OnInitialized();
    }

    public void CheckValidSubmit(bool valid)
    {
        isValidSubmit = valid;
    }
}