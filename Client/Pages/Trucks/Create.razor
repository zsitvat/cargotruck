@page "/Trucks/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" trucks="@truck" OnValidSubmit="@CreateCargo" TitleText="Create_truck" checkValidSubmit="@CheckValidSubmit" />

@code {
    Trucks truck = new Trucks();
    bool isValidSubmit = true;

    async Task CreateCargo()
    {
        if (isValidSubmit)
        {
            await http.PostAsJsonAsync("api/trucks/post", truck);
            uriHelper.NavigateTo("/Trucks");
        }
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Trucks/create");
        base.OnInitialized();
    }

    public void CheckValidSubmit(bool valid)
    {
        isValidSubmit = valid;
    }
}