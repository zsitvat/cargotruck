@page "/Roads/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" roads="@road" OnValidSubmit="@CreateRoad" TitleText="Create_road"  checkValidSubmit="@CheckValidSubmit" />

@code {
    bool isValidSubmit = true;
    RoadsDto road = new RoadsDto();

    async Task CreateRoad()
    {   
        if (isValidSubmit)
        {
            await http.PostAsJsonAsync("api/roads/post", road);
            uriHelper.NavigateTo("/Roads");
        }
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Roads/create");
        base.OnInitialized();
    }

    public void CheckValidSubmit(bool valid)
    {
        isValidSubmit = valid;
    }
}