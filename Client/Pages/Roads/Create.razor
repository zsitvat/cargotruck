@page "/Roads/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" roads="@road" OnValidSubmit="@CreateRoad" TitleText="Create_road" />

@code {
    Roads road = new Roads();
    async Task CreateRoad()
    {
        await http.PostAsJsonAsync("api/roads/post", road);
        uriHelper.NavigateTo("/Roads");
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Roads/create");
        base.OnInitialized();
    }
}