@page "/Roads/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

 <Form ButtonText="Create" Roads="@road" OnValidSubmit="@CreateRoad" />

@code {
    Roads road = new Roads();
    async Task CreateRoad()
    {
        await http.PostAsJsonAsync("api/roads/post", road);
        uriHelper.NavigateTo("/roads");
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/roads/create");
        base.OnInitialized();
    }
}