@page "/Cargoes/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" cargoes="@cargo" OnValidSubmit="@CreateCargo" TitleText="Create_cargo" checkValidSubmit="@CheckValidSubmit" />

@code {
    CargoesDto cargo = new CargoesDto();
    bool isValidSubmit = true;

    async Task CreateCargo()
    {
        if (isValidSubmit)
        {
            await http.PostAsJsonAsync("api/cargoes/post", cargo);
            uriHelper.NavigateTo("/Cargoes");
        }
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Cargoes/create");
        base.OnInitialized();
    }

    public void CheckValidSubmit(bool valid)
    {
        isValidSubmit = valid;
    }
}