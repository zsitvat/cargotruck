@page "/Tasks/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<Form ButtonText="Create" tasks="@task" OnValidSubmit="@CreateTasks" TitleText="Create_task" checkValidSubmit="@CheckValidSubmit" />

@code {
    bool isValidSubmit = true;
    TasksDto task = new TasksDto();

    async Task CreateTasks()
    {
        if (isValidSubmit)
        {
            await http.PostAsJsonAsync("api/tasks/post", task);
            uriHelper.NavigateTo("/Tasks");
        }
    }

    protected override void OnInitialized()
    {
        PageHistoryState.AddPageToHistory("/Tasks/create");
        base.OnInitialized();
    }

    public void CheckValidSubmit(bool valid)
    {
        isValidSubmit = valid;
    }
}