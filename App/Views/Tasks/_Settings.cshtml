@model IEnumerable<App.Models.Tasks>

<div class="modal fade" id="addSettings">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addSettingsLabel">
                    @App.Resources.Resource.Tasks_title;
                </h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body" >
                <form class="popup" asp-action="Modal" asp-controller="Tasks">
                    <div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Partner)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Description)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Place_of_receipt)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Time_of_receipt)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Place_of_delivery)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Time_of_delivery)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Other_stops)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Id_cargo)
                            </label>
                        </div>
                    </div>
                    <div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Storage_time)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Completion_time)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Time_of_delay)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Payment)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Final_Payment)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Penalty)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Date)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" /> @Html.DisplayNameFor(model => model.Completed)
                            </label>
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
