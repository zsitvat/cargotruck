@model App.Models.Users

@{
    ViewData["Title"] = "Bejelentkezés";
}

<div id="login-div">
    @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
    {
        <table>
            <tr>
                <td class="login-title"><h1>@ViewData["Title"]</h1><hr/></td>    
                </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UserName)
                </td>
                <td class="form-input">
                    @Html.EditorFor(model => model.UserName)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.PasswordHash)</td>
                <td class="form-input">
                    @Html.EditorFor(model => model.PasswordHash)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label class="field-validation-error space-for-error2">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input class="btn btn-primary" type="submit" name="name" value="Login" />
                </td>
            </tr>
        </table>
    }

</div>
<script src="~/js/jquery-1.10.2.min.js"></script>
<script src="~/js/jquery.validate.min.js"></script>
<script src="~/js/jquery.validate.unobtrusive.min.js"></script>