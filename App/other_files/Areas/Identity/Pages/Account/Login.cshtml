@page
@model LoginModel

@{
    ViewData["Title"] = "Bejelentkezés";
}


<div class="main-panel">
            <section class="account">
                <form id="account" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <hr />
                    <div style="margin-top:10px;" class="form-group">
                        <input placeholder="Email" asp-for="Input.Email" class="input" />
                        <span class="underline"></span><br>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input placeholder="Jelszó" asp-for="Input.Password" class="input" />
                        <span class="underline"></span><br>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Bejelentkezés</button>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Elfelejtetted a jelszavad?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regisztrálok</a>
                        </p>
                    </div>
                </form>
            </section>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
