@page
@model RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
}



<div class="main-panel">
    <section class="account">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div class="form-group">
                <input placeholder="Email" asp-for="Input.Email" class="input" />
                <span class="underline"></span><br>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Jelszó" asp-for="Input.Password" class="input" />
                <span class="underline"></span><br>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Jelszó újra" asp-for="Input.ConfirmPassword" class="input" />
                <span class="underline"></span><br>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input placeholder="Kulcs" asp-for="Input.App_key" class="input" />
                <span class="underline"></span><br>
                <span asp-validation-for="Input.App_key" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary registerbutton">Regisztrálok</button>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
