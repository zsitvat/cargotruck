@page "/Tasks/create"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js

<h3>Create</h3>

 <Form ButtonText="Create" tasks="@task" OnValidSubmit="@CreateTasks" />

@code {
    Tasks task = new Tasks();
    async Task CreateTasks()
    {
        await http.PostAsJsonAsync("api/tasks", task);
        uriHelper.NavigateTo("/Tasks");
    }
}